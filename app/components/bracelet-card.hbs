<div class='bracelet-card'>
  <div class='bracelet-card-body'>
    <h4 class='bracelet-name'>{{@model.name}}</h4>
    <p class='bracelet-brand'>
      <span>{{@model.brand}}</span>
      Brand
    </p>
    <p class='bracelet-model'>
      <span>{{@model.model}}</span>
      Model
    </p>
    <p class='bracelet-api'>
      Token:
      <span class='masked-api'>{{mask-credentials @model.token}}</span>
    </p>
    <p class='bracelet-api'>
      Token Secret:
      <span class='masked-api'>{{mask-credentials @model.tokenSecret}}</span>
    </p>
    <button
      class='btn delete-button'
      {{on 'click' (fn this.deleteBracelet @model.id)}}
      aria-label='Delete Bracelet'
    >
      <BsIcon @name='trash' class='text-danger' />
    </button>
  </div>
</div>