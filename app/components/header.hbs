<div class='header-container'>
  <div class='header-left'>
    <LinkTo class='header-title' @route='index'>Pulmo-Rehab</LinkTo>

    <div class='header-button'>
      <div
        class='language-toggle
          {{if (eq this.languageSet "en-us") "toggle-left" "toggle-right"}}'
        {{on 'click' this.toggleLocale}}
      >
        <div class='toggle-switch'></div>
        <span class='toggle-label en-label'>EN</span>
        <span class='toggle-label ro-label'>RO</span>
      </div>
    </div>
  </div>

  <div class='header-right'>
    <div class='header-button'>
      <LinkTo class='header-pollution-button' @route='air-pollution'>{{t
          'header.airPollution'
        }}</LinkTo>
    </div>
    {{#if this.session.isAuthenticated}}
      <LinkTo @route='my-account'>
        <BsIcon @name='person-circle' />
        <span>{{t 'header.myAccount'}}</span>
      </LinkTo>
      <div class='header-button' {{on 'click' this.logOut}}>{{t
          'header.logOut'
        }}
      </div>
    {{else}}
      <div class='header-button' {{on 'click' this.openLoginModal}}>{{t
          'header.logIn'
        }}
      </div>
      <div class='header-button'>
        <LinkTo @route='register'>{{t 'header.register'}}</LinkTo>
      </div>
    {{/if}}
  </div>
</div>

{{#if this.isLoginModalOpen}}
  <LoginModal @closeLoginModal={{this.closeLoginModal}} />
{{/if}}